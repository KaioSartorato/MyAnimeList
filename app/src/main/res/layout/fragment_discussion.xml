<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <EditText
                android:id="@+id/etFindClubs"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Find clubs..."
                style="@style/EditTextHintStyle"
                android:background="@drawable/search_background"
                android:paddingStart="40dp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/discover2"
                android:layout_marginStart="8dp" />
        </FrameLayout>
        <TextView
            android:id="@+id/tvMyClubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Clubs"
            android:textColor="@color/white"
            android:padding="16dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />

        <View
            android:id="@+id/linhaSeparacao1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#42404d" />

        <TextView
            android:id="@+id/tvNoClubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No clubs found. Join one!"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="16dp" />

        <TextView
            android:id="@+id/tvRecentlyActiveClubs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recently Active Clubs"
            android:textColor="@color/white"
            android:padding="16dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium" />

        <View
            android:id="@+id/linhaSeparacao2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#42404d" />

        <!-- Club Item 1 -->
        <LinearLayout
            android:id="@+id/Comunidade1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/luffy"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Metalheads of MAL"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="A place where all metal/rock and anime enjoyers belong!"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="449 members"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/linhaSeparacao3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#42404d" />

        <!-- Club Item 2 -->
        <LinearLayout
            android:id="@+id/Comunidade2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/drstone"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harem e Ecchi Club"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="MAL's #1 Hive for Degeneracy! Love Harem e Ecchi? Then come join us for Girl of the Month voting, Simulwatches, Club GFX Cards, and our bustling Discord server!"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="23,6k members"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/linhaSeparacao4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#42404d" />

        <!-- Club Item 3 -->
        <LinearLayout
            android:id="@+id/Comunidade3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_club_icon"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="russian club!"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="A discussion club for Russian speakers!"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="140 members"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/linhaSeparacao5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#42404d" />

        <!-- Club Item 4 -->
        <LinearLayout
            android:id="@+id/Comunidade4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/subaru"
                android:layout_marginRight="16dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Centrovertism"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="A club for all the centroverts out there!"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="200 members"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/linhaSeparacao6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#42404d" />

    </LinearLayout>
</ScrollView>
